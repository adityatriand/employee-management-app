APP_NAME=EmployeeManagement
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=employee_management
DB_USERNAME=laravel_user
DB_PASSWORD=laravel_password

# Redis Configuration
# Note: When using Docker, these are set automatically in docker-compose.yml
# For local development, set these if running Redis locally
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis
REDIS_DB=0
REDIS_CACHE_DB=1

# Cache Configuration
# Auto-detects Redis if REDIS_HOST is set, otherwise uses 'file'
CACHE_DRIVER=redis
CACHE_PREFIX=employee_management_cache_

# Queue Configuration
# Auto-detects Redis if REDIS_HOST is set, otherwise uses 'database'
# Options: 'sync', 'database', 'redis', 'sqs'
QUEUE_CONNECTION=redis
REDIS_QUEUE=default

# Session Configuration
# Options: 'file', 'cookie', 'database', 'redis', 'memcached'
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Sanctum Token Configuration
SANCTUM_TOKEN_EXPIRATION=1440
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:8000

# Broadcasting Configuration
BROADCAST_DRIVER=log

# Filesystem Configuration
FILESYSTEM_DISK=local

# MinIO Configuration (S3-compatible storage)
# Note: When using Docker, these are set automatically in docker-compose.yml
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=workforcehub
MINIO_REGION=us-east-1
MINIO_URL=http://localhost:9000

# Memcached Configuration (optional)
MEMCACHED_HOST=127.0.0.1

# Mail Configuration (optional - for notifications)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (optional - for SQS, S3, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (optional - for real-time features)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Vite Configuration (for frontend assets)
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
VITE_APP_NAME="${APP_NAME}"
